@{
	ViewData["Title"] = "Вход";
	Layout = "../Shared/_Layout.cshtml";
}

<div class="page">
	<div class="page__container-left form__frame">
		<div class="form">
			<h1>Авторизация</h1>
			<h3>Нет аккаунта?&nbsp<a href="/Registration">Зарегистрироваться</a></h3>
			<form action="/User/Login" method="post">
				<div class="form__input">
					<h3>Почта (Логин)</h3>
					<input type="text" required="required" name="login" autocomplete="off"/>
				</div>

				<div class="form__input">
					<h3>Пароль</h3>
					<input type="password" required="required" name="password" autocomplete="off"/>
				</div>

				<button type="submit">
					Войти
				</button>
			</form>
		</div>
	</div>

	<div class="page__container-right back__frame">
		<img src="~/svg/background_image.svg"/>
	</div>
</div>

@section Style {
	<link rel="stylesheet" href="~/css/registrationPage.css" asp-append-version="true" />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
}
